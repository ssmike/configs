set mbox_type=Maildir
set spoolfile="~/mail"
set folder="~/mail"
set record=+
set header_cache=~/.hcache
set mime_forward=yes 
set mime_forward_rest=yes
macro pager 'V' "<pipe-entry>cat >~/.cache/mutt/mail.html && chromium ~/.cache/mutt/mail.html<enter>"
macro attach 'V' "<pipe-entry>cat >~/.cache/mutt/mail.html && chromium ~/.cache/mutt/mail.html<enter>"
set write_bcc=no
auto_view text/html
macro pager p  <previous-line>
macro pager  <search-opposite>
macro pager r <reply>
macro index r <search-opposite>
macro index  <next-unread>
macro pager  <next-unread>
mime_lookup application/octet-stream
set sendmail="/usr/sbin/ssmtp"
set realname="Mikhail Surin"
set from="surinmike@gmail.com"
set signature="~/.signature"
#macro pager \cb <pipe-entry>'w3m'<enter> 'Follow links in w3m'
macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'

set sort = threads
set sort_aux = last-date-received

ignore *
unignore from date subject to cc
unignore organization organisation x-mailer: x-newsreader: x-mailing-list:
unignore posted-to:
unignore User-Agent:

# -*-muttrc-*-

# Palette for use with the Linux console.  Black background.

color hdrdefault brightblue default
color quoted blue default
color signature blue default
color attachment red default
color prompt brightred default
color message brightred default
color error brightred default
color indicator blue default 
color status magenta brightblack
#color status brightgreen blue
color tree white default
color normal white default
color markers red default
color search white default
color tilde brightmagenta default
color index blue default ~F
color index red default "~N|~O"
color index green default "~v~(!~N)~(!~F)" # collapsed thread with no New or Flagged
color index red   default "~v~(~N)"        # collapsed thread with New
bind index - collapse-thread
bind index _ collapse-all
unset collapse_unread
folder-hook . push "<collapse-all>"

