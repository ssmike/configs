"~/scripts/play-pause.sh"
    XF86AudioPlay
"mocp -f"
    XF86AudioNext
"mocp -r"
    XF86AudioPrev
"mocp -s"
    XF86AudioStop

"slock"
    control + alt + l
"~/scripts/steam.sh"
    control + alt + s

"xbacklight -inc 20"
    XF86MonBrightnessUp
"xbacklight -dec 20"
    XF86MonBrightnessDown

"amixer -q sset Master 10%+"
    XF86AudioRaiseVolume
"amixer -q sset Master 10%-"
    XF86AudioLowerVolume
"sakura -x mocp"
    control + alt + m
"amixer -q sset Master toggle"
    XF86AudioMute
"amixer -q sset Master toggle"
    alt + m
"amixer -q sset Speaker unmute"
    alt + k
"amixer -q sset Speaker mute"
    alt + l
