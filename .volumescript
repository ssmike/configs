#!/bin/bash
volume=`amixer -c 0 get Master | grep Mono: | cut -d " " -f6`
state=`amixer -c 0 get Master | grep Mono: | cut -d " " -f8`
if [ $state = "[off]" ]; then
    echo "[off]";
else
    echo $volume;
fi
